<Window x:Class="AudioCdBurner.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio-CD Burner" Width="700" Height="450">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Name="AddFilesBtn" Width="120" Height="32" Click="AddFilesBtn_Click">Add files</Button>
            <TextBlock Name="CountText" Margin="12,0,0,0" VerticalAlignment="Center"/>
            <Button Name="TranscodeBtn" Width="120" Height="32" Margin="12,0,0,0" Click="TranscodeBtn_Click">Transcode files</Button>
            <Button Name="RemoveBtn" Width="120" Height="32" Margin="12,0,0,0" Click="RemoveBtn_Click">Remove selected</Button>
        </StackPanel>

        <ListView Name="FilesList" ItemsSource="{Binding Tracks}" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="AudioNote" DisplayMemberBinding="{Binding AudioNote}"/>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist}"/>
                    <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}"/>
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration, StringFormat={}{0:mm\\:ss}}"/>
                    <GridViewColumn Header="Path" DisplayMemberBinding="{Binding Path}"/>
                    <GridViewColumn Header="BitrateKbps" DisplayMemberBinding="{Binding BitrateKbps}"/>
                    <GridViewColumn Header="SampleRateHz" DisplayMemberBinding="{Binding SampleRateHz}"/>
                    <GridViewColumn Header="Channels" DisplayMemberBinding="{Binding Channels}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>